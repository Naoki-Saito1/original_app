<p id="notice"><%= notice %></p>

<h1>Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Portfolio title</th>
      <th>Portfolio body</th>
      <th>Portfolio image</th>
      <th>Portfolio language</th>
      <th>Portfolio github</th>
      <th>Portfolio url</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.portfolio_title %></td>
        <td><%= portfolio.portfolio_body %></td>
        <td><%= image_tag portfolio.portfolio_image.url, style:'width:100px', class: "icon" %></td>
        <td><%= portfolio.portfolio_language %></td>
        <td><%= portfolio.portfolio_github %></td>
        <td><%= portfolio.portfolio_url %></td>
        <td><%= portfolio.user_id %></td>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Portfolio', new_portfolio_path %>
