
<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>アイコン</th>
      <th>ユーザーネーム</th>
      <th>性別</th>
      <th>年齢</th>
      <th>所在地</th>
      <th>就職状況</th>
      <th>就職状況詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><% if profile.image? %>
  <%= image_tag profile.image.url, style:'width:80px', class: "icon" %>
<% else %>
  <%= image_tag asset_path("no_image.jpg"), class: "icon" %>
<% end %></td>
        <td><%= profile.name %></td>
        <td><%= profile.gender %></td>
        <td> <% if  profile.birth_date.present? %> <%= (Date.today.strftime('%Y%m%d').to_i - profile.birth_date.strftime('%Y%m%d').to_i) / 10000 %>歳   <% end %></td>
        <td><%= profile.address %></td>
        <td><%= profile.status %></td>
        <td><%= profile.detail %></td>
        <td><%= link_to 'Show', profile %></td>
        <% if profile.user_id == current_user.id || current_user.try(:admin?) %>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

