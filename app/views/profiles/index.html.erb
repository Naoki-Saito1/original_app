<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Birth date</th>
      <th>Address</th>
      <th>Status</th>
      <th>Detail</th>
      <th>Body</th>
      <th>Twitter</th>
      <th>Github</th>
      <th>Qiita</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.image %></td>
        <td><%= profile.name %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.birth_date %></td>
        <td><%= profile.address %></td>
        <td><%= profile.status %></td>
        <td><%= profile.detail %></td>
        <td><%= profile.body %></td>
        <td><%= profile.twitter %></td>
        <td><%= profile.github %></td>
        <td><%= profile.qiita %></td>
        <td><%= profile.user_id %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
