<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Birth date</th>
      <th>Address</th>
      <th>Status</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= image_tag profile.image.url, style:'width:100px', class: "icon" %></td>
        <td><%= profile.name %></td>
        <td><%= profile.gender %></td>
        <td> <% if  profile.birth_date.present? %> <%= (Date.today.strftime('%Y%m%d').to_i - profile.birth_date.strftime('%Y%m%d').to_i) / 10000 %>æ­³   <% end %></td>
        <td><%= profile.address %></td>
        <td><%= profile.status %></td>
        <td><%= profile.detail %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

