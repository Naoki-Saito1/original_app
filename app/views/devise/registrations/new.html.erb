<%= render "devise/shared/error_messages", resource: resource %>
 <div class="box-auto">
<div class="box pad">
  <div class="box-inner">
    
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  

     <h1 class="white">新規作成</h1>
      <div class="box-name">
     <%= f.fields_for :profile, @user.build_profile do |f| %>
 
     <%= f.label :name, {class: 'white'}  %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザーネーム(25字以内)" %>
    </div>
  <% end %>
      <div class="box-email">
      
        <%= f.label :email, {class: 'white'}  %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>

      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード", {class: 'white'}  %>
            <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
            <% end %>
          </div>
        </div>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "必須" %>

        <div class="a-row">
          <div class="column-left">
            <%= f.label :password_confirmation, class:"column white"  %>
          </div>
        </div>
         <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "必須" %>
      </div>

    
   

  <div class="box-login">
        <%= f.submit "新規作成" %>
        
        </div> 




        <% if devise_mapping.rememberable? %>
          <div class="remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember, "ログインしたままにする", {class: 'white'} %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="box-newusr">
      <p><span>------------</span> 既にアカウントをお持ちですか? <span>------------</span></p>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</div>